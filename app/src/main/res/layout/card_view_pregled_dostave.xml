                <!--android:layout_weight="2"-->
                <!--android:text="@string/lozinka"-->
                <!--android:onClick="onClickButtonValidate"-->
                <!--/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>