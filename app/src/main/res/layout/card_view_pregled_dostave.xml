                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:text="QR"-->
                <!--android:onClick="onClickButtonValidate"-->
                <!--/>-->

            <!--<Button-->
                <!--android:id="@+id/buttonValidacijaPrekoLozinke"-->
