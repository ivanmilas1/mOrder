<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_wallpaper_backgroud"
    tools:context=".IzbornikDjelatnikActivity">

    <Button
        android:id="@+id/buttonOrdersView"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:onClick="OnClickViewOrders"
        android:text="@string/pregled_stolova"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonPregledKorisnika" />

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="214dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="240dp"
        android:background="@color/colorAccent"
        android:onClick="OnClickSignOut"
        android:text="@string/odjava"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonOrdersView"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/buttonOrdersView"
        app:layout_constraintTop_toBottomOf="@+id/buttonOrdersView" />

    <Button
        android:id="@+id/buttonStartQR"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:onClick="OnClickStartQR"
        android:text="UNESI QR KOD"
        app:layout_constraintBottom_toTopOf="@+id/ButtonPregledKorisnika"
        app:layout_constraintStart_toStartOf="@+id/ButtonPregledKorisnika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/buttonValidatePassword"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="150dp"
        android:background="@color/colorAccent"
        android:onClick="OnClickValidateGenericPassword"
        android:text="VALIDIRANJE DOSTAVE PREKO LOZINKE"
        app:layout_constraintBottom_toTopOf="@+id/ButtonPregledKorisnika"
        app:layout_constraintStart_toStartOf="@+id/ButtonPregledKorisnika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ButtonPregledKorisnika"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:onClick="OnClickViewDjelatnik"
        android:text="Pregled Korisnika"
        app:layout_constraintBottom_toTopOf="@+id/buttonOrdersView"
        app:layout_constraintEnd_toEndOf="@+id/buttonOrdersView"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/buttonOrdersView"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartQR" /><![CDATA[
    />

]]>
</android.support.constraint.ConstraintLayout>