<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_naziv"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:text="Proizvod"

        android:textAlignment="center"
        tools:text="Stavka" />

    <Button
        android:id="@+id/list_item_btn_povecaj"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/list_item_naziv"
        android:background="@drawable/rounded_button"
        android:text="+"
        android:textColor="#2A4F4A"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/list_item_kolicina"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/list_item_btn_povecaj"
        android:ems="10"
        android:hint="7"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/list_item_btn_umanji"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/list_item_kolicina"
        android:background="@drawable/rounded_button"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#2A4F4A"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/list_item_cijena"
        android:layout_width="74dp"
        android:layout_height="46dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/list_item_btn_umanji"
        android:text="Text"
        android:textAlignment="center"
        tools:text="Price" />

</RelativeLayout>