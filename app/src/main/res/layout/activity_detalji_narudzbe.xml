<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDA489"
    tools:context=".DetaljiNarudzbe">

    <Button
        android:id="@+id/btnDodaj2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button1"
        android:text="Dodaj" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <ListView

        android:id="@+id/listview"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:divider="#2A4F4A"
        android:dividerHeight="1dp">

    </ListView>

    <TextView
        android:id="@+id/textViewTrenutniKorisnik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:text="Korisnik" />

    <Button
        android:id="@+id/btnSpremi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnDodaj2"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-103dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button1"
        android:text="Spremi"
        tools:layout_width="wrap_content" />

    <SearchView
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="0dp"
        android:background="#2A4F4A"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textViewPopisNovihStavki"
        android:layout_width="147dp"
        android:layout_height="101dp"
        android:layout_alignEnd="@+id/textViewTrenutniKorisnik"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="77dp"
        android:outlineAmbientShadowColor="#2A4F4A"
        android:text="Popis novih stavki"
        app:lineHeight="2dp" />

    <TextView
        android:id="@+id/textViewTrenutniStol"
        android:layout_width="127dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="-37dp"
        android:layout_toStartOf="@+id/textViewTrenutniKorisnik"
        android:text="Stol"
        android:textAlignment="center"

        />


</RelativeLayout>